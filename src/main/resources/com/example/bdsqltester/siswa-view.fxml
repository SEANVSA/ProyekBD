<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>

<VBox alignment="TOP_CENTER" prefWidth="470.0" spacing="20.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
   </padding>

   <!-- Close Button (Top Right) -->
   <HBox alignment="TOP_RIGHT">
      <Button style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 5;">
         <graphic>
            <StackPane>
               <Circle fill="#e74c3c" radius="12" />
               <Line endX="5" endY="5" startX="-5" startY="-5" stroke="white" strokeWidth="2" />
               <Line endX="-5" endY="5" startX="5" startY="-5" stroke="white" strokeWidth="2" />
            </StackPane>
         </graphic>
      </Button>
   </HBox>

   <!-- Main Content Card -->
   <VBox alignment="CENTER" prefHeight="248.0" prefWidth="390.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
      <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Selamat Datang, Siswa!">
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </Label>

      <HBox alignment="CENTER_LEFT" spacing="30.0">
         <!-- Student Photo with Border -->
         <ImageView fitHeight="177.0" fitWidth="120.0" preserveRatio="true">
            <image>
<!--               <Image url="@/images/student_placeholder.png" />-->
<!--               UNTUK FOTO -->
            </image>
            <clip>
               <Circle centerX="60.0" centerY="60.0" radius="60.0" />
            </clip>
            <effect>
               <DropShadow color="rgba(0,0,0,0.1)" radius="10" />
            </effect>
         </ImageView>

         <!-- Action Buttons -->
         <VBox alignment="CENTER_LEFT" spacing="12.0">
            <Button fx:id="biodataButton" style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Biodata" />
            <Button fx:id="scheduleButton" style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="Jadwal Pelajaran" />
            <Button fx:id="gradeButton" style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Nilai Akademik" />
         </VBox>
      </HBox>

      <!-- Student Name -->
      <Label fx:id="nameLabel" style="-fx-font-size: 18px; -fx-text-fill: #34495e; -fx-font-weight: bold;">
         <padding>
            <Insets top="15.0" />
         </padding>
      </Label>
   </VBox>
   <Button style="-fx-font-size: 13px; -fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-underline: true; -fx-cursor: hand; -fx-alignment: baseline-left;" text="â† Kembali ke Halaman Login" />
</VBox>
