<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header with Close Button -->
    <HBox alignment="CENTER" spacing="20.0">
        <Label text="Input Data Siswa" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Close" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #e74c3c; -fx-background-radius: 5; -fx-padding: 5 15 5 15;">
            <effect>
                <DropShadow color="rgba(0,0,0,0.1)" radius="3" />
            </effect>
        </Button>
    </HBox>

    <!-- Student Data Form Card -->
    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <HBox alignment="CENTER" spacing="40.0">
            <!-- Student Photo Upload -->
            <VBox alignment="CENTER" spacing="10.0">
                <StackPane style="-fx-background-color: #ecf0f1; -fx-background-radius: 5; -fx-min-width: 180; -fx-min-height: 180;">
                    <Label text="Upload Foto" style="-fx-text-fill: #7f8c8d;" />
                </StackPane>
                <Button text="Pilih Foto" style="-fx-font-size: 14px; -fx-pref-width: 120px; -fx-background-color: #bdc3c7; -fx-text-fill: #2c3e50; -fx-background-radius: 5;" />
            </VBox>

            <!-- Student Data Form -->
            <GridPane hgap="15.0" vgap="12.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="150.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="250.0" />
                </columnConstraints>

                <children>
                    <!-- Login Information -->
                    <Label text="Nomor Induk*:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />
                    <TextField fx:id="nomorIndukField" style="-fx-pref-width: 250px;" GridPane.columnIndex="1" />

                    <Label text="Password*:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="1" />
                    <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="(Otomatis: Tgl Lahir)" style="-fx-text-fill: #95a5a6;" />
                        <Button text="Generate" style="-fx-font-size: 12px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 3;" />
                    </HBox>

                    <!-- Student Biodata -->
                    <Label text="Nama Lengkap*:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="2" />
                    <TextField fx:id="namaLengkapField" style="-fx-pref-width: 250px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Tempat Lahir*:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="3" />
                    <TextField fx:id="tempatLahirField" style="-fx-pref-width: 250px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Tanggal Lahir*:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="4" />
                    <DatePicker fx:id="tanggalLahirPicker" style="-fx-pref-width: 250px;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Jenis Kelamin*:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="5" />
                    <ChoiceBox fx:id="jenisKelaminChoice" style="-fx-pref-width: 250px;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <Label text="Agama*:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="6" />
                    <ChoiceBox fx:id="agamaChoice" style="-fx-pref-width: 250px;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <Label text="Alamat*:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="7" />
                    <TextArea fx:id="alamatField" style="-fx-pref-width: 250px; -fx-pref-height: 60px;" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                    <Label text="Nomor Telepon:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="8" />
                    <TextField fx:id="nomorTeleponField" style="-fx-pref-width: 250px;" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                    <Label text="Golongan Darah:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" GridPane.rowIndex="9" />
                    <ChoiceBox fx:id="golonganDarahChoice" style="-fx-pref-width: 250px;" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                </children>
            </GridPane>
        </HBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20 0 0 0;">
            <Button text="Simpan Data" style="-fx-font-size: 16px; -fx-pref-width: 180px; -fx-pref-height: 40px; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" />
            <Button text="Reset Form" style="-fx-font-size: 16px; -fx-pref-width: 180px; -fx-pref-height: 40px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" />
        </HBox>
    </VBox>

    <!-- Navigation -->
    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Kembali ke Dashboard" style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-pref-height: 35px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" />
    </HBox>
</VBox>