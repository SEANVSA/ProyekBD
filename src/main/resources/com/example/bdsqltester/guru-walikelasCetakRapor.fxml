<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="18.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER" spacing="18.0">
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Cetak Rapor Siswa" />
        <Region HBox.hgrow="ALWAYS" />
        <Button style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #e74c3c; -fx-background-radius: 5; -fx-padding: 5 15 5 15;" text="Close">
            <effect>
                <DropShadow color="rgba(0,0,0,0.1)" radius="3" />
            </effect>
        </Button>
    </HBox>

    <!-- Pilih Kelas & Siswa -->
    <HBox alignment="CENTER" spacing="16.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14;">
        <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Kelas:" />
        <ComboBox fx:id="kelasComboBox" prefWidth="130" promptText="Pilih Kelas" />
        <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Siswa:" />
        <ComboBox fx:id="siswaComboBox" prefWidth="180" promptText="Pilih Siswa" />
        <Button style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Tampilkan Rapor" />
    </HBox>

    <!-- Tabel Rapor -->
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 0);">
        <Label fx:id="judulRaporLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Rapor Siswa" />
        <TableView fx:id="raporTable" prefHeight="340.0" prefWidth="700.0">
            <columns>
                <TableColumn prefWidth="60" text="No" />
                <TableColumn prefWidth="220" text="Mata Pelajaran" />
                <TableColumn prefWidth="110" text="Nilai UTS" />
                <TableColumn prefWidth="110" text="Nilai UAS" />
                <TableColumn prefWidth="110" text="Nilai Tugas" />
            <TableColumn prefWidth="88.00006103515625" text="Nilai Proyek" />
                <!-- Tambah kolom lain jika ada jenis ujian lain -->
            </columns>
            <!--
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <RaporRow no="1" mapel="Matematika" uts="80" uas="85" tugas="90" />
                    <RaporRow no="2" mapel="Bahasa Indonesia" uts="78" uas="82" tugas="88" />
                </FXCollections>
            </items>
            -->
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="12.0">
            <Button style="-fx-font-size: 15px; -fx-background-color: #f1c40f; -fx-text-fill: #2c3e50; -fx-background-radius: 5;" text="Cetak/Unduh PDF" />
        </HBox>
    </VBox>

    <!-- Info Kelas dan Wali -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label fx:id="kelasLabel" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Kelas: X IPA 1" />
        <Label fx:id="waliLabel" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Wali Kelas: Nama Wali" />
    </HBox>

    <!-- Back Button -->
    <HBox alignment="CENTER" style="-fx-padding: 18 0 0 0;">
        <Button style="-fx-font-size: 14px; -fx-pref-width: 120px; -fx-pref-height: 35px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Kembali" />
    </HBox>
</VBox>
